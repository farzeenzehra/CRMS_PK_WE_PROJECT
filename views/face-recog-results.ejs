<div class="p-3 mb-2 bg-dark text-white rounded h6">Similar Images</div>
<div class="d-flex flex-wrap">
    <% if (results != "No similar image found!" && results != "Couldn't Detect Face!")
        {
        results.forEach(result=> { %>
        <div class="card m-3" style="width: 13rem;" id="img-card">
            <% var path='images/' +result.CNIC+'.jpg'; %>
                <img id="img-holder" class="card-img-top" alt="result picture" src=<%=path %> >
                <div class="card-body p-2">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">CNIC: 
                            <!-- <% let src = `/search_person?cnic=${result.CNIC}` %> -->
                            <a class="font-weight-bold p-0 m-0 cnicBtn text-primary" style="cursor: pointer;">
                                <%= result.CNIC %>
                            </a>
                            
                        </li>
                        <li class="list-group-item">
                            Similarity: <b><%= result.Confidence_Score %></b>
                        </li>

                    </ul>
                </div>
        </div>
        <% }); 
    }
    else
    { %>
       <h4 class="text-danger mx-3 my-5 justify-content-center"><%= results %></h4> 
    <% } %>
</div>

  
