<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="css/dashboard.css">
        <title>Crime Report</title>

</head>

<body>

    <div class="page-wrapper chiller-theme toggled">

        <%- include ('partials/header.ejs') %>
            <main class="page-content mt-5">
                <div class="container-fluid">
                    <h2>Crime Report</h2>
                    <hr>
                    <div class="container py-3">

                        <!-- alert -->
                        <div class="alert" role="alert" id="notifAlert" style="display: none;">
                        </div>
                        <!-- alert -->
                        <form id="crimeIDForm">
                            <div class="input-group">
                                <input type="text" id="crimeIDval" class="form-control"
                                    placeholder="Enter Crime Record ID" required>
                                <div class="input-group-append">
                                    <button class="btn btn-dark" type="submit">Generate</button>
                                </div>
                            </div>
                        </form>
                        <div id="rsltDIV" class="mt-2" style="display: none;">
                            <div id="crimeReport" class="p-4 border rounded border-dark">
                                <details>
                                    <summary class="p-3 mb-3 bg-dark text-white rounded h6">Criminal Information
                                    </summary>
                                    <div id="criminalInfo" class="p-4 border rounded border-dark">
                                        <div class="row">
                                            <div class="col-sm-9">
                                                <div id="criminalInfoForm">
                                                    <div class="row">
                                                        <label for="CriminalID"
                                                            class="col-sm-2 col-form-label"><b>Criminal
                                                                ID</b></label>
                                                        <div class="col-sm-10">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="CriminalID" placeholder="Criminal ID" readonly
                                                                readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="CNIC"
                                                            class="col-sm-2 col-form-label"><b>CNIC</b></label>
                                                        <div class="col-sm-10">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="CNIC" placeholder="CNIC" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="FullName" class="col-sm-2 col-form-label"><b>Full
                                                                Name</b></label>
                                                        <div class="col-sm-10">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="FullName" placeholder="Person's Name" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="Height"
                                                            class="col-sm-2 col-form-label"><b>Height</b></label>
                                                        <div class="col-sm-10">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="Height" placeholder="Height in cm [ex:140.0]"
                                                                readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="Weight"
                                                            class="col-sm-2 col-form-label"><b>Weight</b></label>
                                                        <div class="col-sm-10">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="Weight" placeholder="Weight in kg [ex: 70.0]"
                                                                readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="Complexion"
                                                            class="col-sm-2 col-form-label"><b>Complexion</b></label>
                                                        <div class="col-sm-10">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="Complexion" placeholder="Complexion" readonly>
                                                        </div>
                                                    </div>

                                                    <div class="mt-4 row">
                                                        <label for="HairColor" class="col-sm-2 col-form-label"><b>Hair
                                                                Color</b></label>
                                                        <div class="col-sm-4">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="HairColor" placeholder="Hair Color" readonly>
                                                        </div>
                                                        <label for="EyeColor" class="col-sm-2 col-form-label"><b>Eye
                                                                Color</b></label>
                                                        <div class="col-sm-4">
                                                            <input type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="EyeColor" placeholder="Eye Color" readonly>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="Lang"
                                                            class="col-sm-2 col-form-label"><b>Languages</b></label>
                                                        <div class="col-sm-10">
                                                            <textarea type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="Lang" placeholder="Languages" readonly></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="mt-4 row">
                                                        <label for="MOI" class="col-sm-2 col-form-label"><b>Marks of
                                                                Identification</b></label>
                                                        <div class="col-sm-10">
                                                            <textarea type="text"
                                                                class="form-control-plaintext border pl-3 rounded"
                                                                id="MOI" placeholder="Marks of Identification"
                                                                readonly></textarea>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-3">
                                                <div class="row">

                                                    <div class="card m-2" style="width: 11rem;">
                                                        <div class="card-body">
                                                            <label for="front-img-holder"><b>Front Profile
                                                                    Image</b></label>
                                                            <img id="front-img-holder" class="card-img-top"
                                                                src="images/unknownSampleImg.png" alt="person's image">
                                                        </div>
                                                    </div>

                                                    <div class="card m-2" style="width: 11rem;">
                                                        <div class="card-body">
                                                            <label for="left-img-holder"><b>Left Profile
                                                                    Image</b></label>
                                                            <img id="left-img-holder" class="card-img-top"
                                                                src="images/unknownSampleImg.png" alt="person's image">
                                                        </div>
                                                    </div>

                                                    <div class="card m-2" style="width: 11rem;">
                                                        <div class="card-body">
                                                            <label for="right-img-holder"><b>Right Profile
                                                                    Image</b></label>
                                                            <img id="right-img-holder" class="card-img-top"
                                                                src="images/unknownSampleImg.png" alt="person's image">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">Crime Information</summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="crimeInfo">
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">FIR Information</summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="firInfo">
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">Police Station Information
                                    </summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="psInfo">
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">Case Information</summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="caseInfo">
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">Court Information</summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="courtInfo">
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">Jail Information</summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="jailInfo">
                                    </div>
                                </details>
                                <details>
                                    <summary class="p-3 my-3 bg-dark text-white rounded h6">Police Officer Information
                                    </summary>
                                    <div class="mt-2 p-4 border rounded border-dark" id="poInfo">
                                    </div>
                                </details>
                            </div>
                            <div class="d-flex justify-content-end p-3">
                            <button type="button" onclick="generatePDF();" class="btn btn-primary">Save Report as
                                pdf</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- </div> -->
    </div>
    </main>
    <!-- page-content" -->
    </div>
    <!-- page-wrapper -->
    <%- include('partials/foot.ejs') %>
        <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.min.js"></script>
        <script>
            function generatePDF() {
                // Choose the element that our invoice is rendered in.
                $('details').attr('open', true);
                const element = document.getElementById('crimeReport');
                // Choose the element and save the PDF for our user.
                let opt = {
                    margin: [0.5, 0],
                    filename: 'Crime Report.pdf',
                    image: { type: 'png', quality: 1 },
                    jsPDF: { unit: 'in', format: 'A4', orientation: 'portrait' }
                };

                html2pdf().set(opt).from(element).save();
            }
            $('#crimeIDForm').on('submit', function (e) {
                e.preventDefault();
                $('#rsltDIV').hide();
                $('#notifAlert').removeClass('alert-danger');
                $('#notifAlert').addClass('alert-info');
                $('#notifAlert').text("Please Wait! Fetching Results");
                $('#notifAlert').show();
                $.ajax({
                    type: 'get',
                    url: '/gen_crime_report',
                    dataType: 'json',
                    xhrFields: {
                        withCredentials: true
                    },
                    data: {
                        "id": $('#crimeIDval').val()
                    },
                    success: function (records) {
                        $('#FullName').val(records.criminal.FullName);
                        $('#CNIC').val(records.criminal.CNIC);
                        $('#CriminalID').val(records.criminal.CriminalID);
                        $('#Height').val(records.criminal.Height);
                        $('#Weight').val(records.criminal.Weight);
                        $('#Complexion').val(records.criminal.Complexion);
                        $('#HairColor').val(records.criminal.HairColor);
                        $('#EyeColor').val(records.criminal.EyeColor);
                        $('#Lang').val(records.criminal.Languages);
                        $('#MOI').val(records.criminal.IdentificationMarks);
                        $('#front-img-holder').attr('src', records.criminal.frontProfile);
                        $('#left-img-holder').attr('src', records.criminal.leftProfile);
                        $('#right-img-holder').attr('src', records.criminal.rightProfile);

                        // for (const key in records.criminal) {
                        //   document.getElementsByCId('crimeInfo').innerHTML +=
                        //     `
                        // <p>${key}: ${records.criminal[key]}</p>
                        // `
                        // }
                        let details = '';
                        for (const key in records.crime) {
                            details += `<p><b>${key}: </b>${records.crime[key]}</p>`
                        }
                        document.getElementById('crimeInfo').innerHTML = details;
                        details = '';
                        for (const key in records.fir) {
                            details += `<p><b>${key}: </b>${records.fir[key]}</p>`
                        }
                        document.getElementById('firInfo').innerHTML = details;
                        details = '';
                        for (const key in records.ps) {
                            details += `<p><b>${key}: </b>${records.ps[key]}</p>`
                        }
                        document.getElementById('psInfo').innerHTML = details;
                        if (records.case['Case No'] != null) {
                            details = '';
                            for (const key in records.case) {
                                details += `<p><b>${key}: </b>${records.case[key]}</p>`
                            }

                        }
                        else {
                            details = 'No Case Information';
                        }
                        document.getElementById('caseInfo').innerHTML = details;

                        if (records.court['Court Name'] != null) {
                            details = '';
                            for (const key in records.court) {
                                details += `<p><b>${key}: </b>${records.court[key]}</p>`
                            }
                        }
                        else {
                            details = 'No Court Information';
                        }
                        document.getElementById('courtInfo').innerHTML = details;

                        if (records.jail['Jail No'] != null) {
                            details = '';
                            for (const key in records.jail) {
                                details += `<p><b>${key}: </b>${records.jail[key]}</p>`
                            }
                        }
                        else {
                            details = 'No Jail Information';
                        }
                        document.getElementById('jailInfo').innerHTML = details;

                        details = '';
                        for (const key in records.po) {
                            details += `<p><b>${key}: </b>${records.po[key]}</p>`
                        }
                        document.getElementById('poInfo').innerHTML = details;
                        $('#notifAlert').hide();
                        $('#rsltDIV').show();

                    },
                    error: function (err) {
                        $('#notifAlert').removeClass('alert-info');
                        $('#notifAlert').addClass('alert-danger');
                        $('#notifAlert').text("Ooops! Some error occurred");
                        $('#notifAlert').show().delay(5000).fadeOut();
                    }

                })

            });
        </script>



</body>

</html>